<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/insideBlue</item>
        <item name="colorPrimaryDark">@color/outsideBlue</item>
        <item name="colorAccent">@color/textColorPrimary</item>
    </style>
    <style name="AppNoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTitleBackgroundStyle">@style/titleStyle</item>
    </style>
    <style name="titleStyle">e
        <item name="android:background">#505d8a</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
