<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<include android:id="@+id/title_bar"
		layout="@layout/title_action_bar"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="324dp"
		>

		<ImageView
			android:id="@+id/imageTouXiang"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_marginStart="162dp"

			android:layout_marginTop="132dp"
			android:layout_marginEnd="185dp"
			android:layout_marginBottom="132dp"
			android:background="@mipmap/tibiao_png"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

		</ImageView>

	</androidx.constraintlayout.widget.ConstraintLayout>



	<!-- 昵称 -->

	<LinearLayout
		android:id="@+id/LinearLayout_nicheng"
		android:layout_width="fill_parent"
		android:layout_height="50dp"

		android:orientation="horizontal" >

		<TextView
			android:id="@+id/textview_nicheng"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:clickable="true"
			android:drawablePadding="1.0dip"
			android:gravity="center_vertical"
			android:layout_marginTop="13dp"
			android:text="用户昵称"

			android:textSize="20.0sp" />

		<TextView
			android:id="@+id/textview_username"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="165dp"
			android:clickable="true"
			android:layout_marginTop="13dp"
			android:drawablePadding="1.0dip"
			android:gravity="center_vertical"
			android:text="陈思绵"

			android:textSize="18.0sp" />



		<ImageView
			android:id="@+id/ImageView_nicheng"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:layout_gravity="center_vertical"
			android:layout_marginRight="2dp"

			android:layout_marginLeft="15dp"
			android:background="@drawable/account__arrow_right" />

	</LinearLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="2.0dip"
		android:background="@drawable/ic_shelf_category_divider" />


	<!-- 性别 -->

	<LinearLayout
		android:id="@+id/LinearLayout_xingbie"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:orientation="horizontal" >

		<TextView
			android:id="@+id/textview_xingbie"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:clickable="true"
			android:drawablePadding="1.0dip"
			android:gravity="center_vertical"
			android:text="性别 "
			android:layout_marginTop="13dp"
			android:textSize="20.0sp" />

		<TextView
			android:id="@+id/textview_sex"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="200dp"
			android:layout_marginTop="13dp"
			android:clickable="true"
			android:drawablePadding="1.0dip"
			android:gravity="center_vertical"
			android:text="男"
			android:textSize="18.0sp" />

		<ImageView
			android:id="@+id/ImageView_xingbie"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:layout_gravity="center_vertical"
			android:layout_marginRight="2dp"

			android:layout_marginLeft="71dp"
			android:background="@drawable/account__arrow_right" />

	</LinearLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="2.0dip"
		android:background="@drawable/ic_shelf_category_divider" />


	<!-- 头像 -->

	<LinearLayout
		android:id="@+id/LinearLayout_phone"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:orientation="horizontal" >

		<TextView
			android:id="@+id/textview_phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:layout_marginTop="13dp"
			android:clickable="true"
			android:drawablePadding="1.0dip"
			android:gravity="center_vertical"
			android:text="联系方式"

			android:textSize="20.0sp" />

		<TextView
			android:id="@+id/textview_phone01"
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="165dp"
			android:clickable="true"
			android:drawablePadding="1.0dip"
			android:gravity="center_vertical"
			android:text="13620192601"
			android:layout_marginTop="10dp"
			android:textSize="13.0sp" />

		<ImageView
			android:id="@+id/ImageView_phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:layout_gravity="center_vertical"
			android:layout_marginRight="2dp"

			android:layout_marginLeft="4dp"
			android:background="@drawable/account__arrow_right" />


	</LinearLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="2.0dip"
		android:background="@drawable/ic_shelf_category_divider" />

</LinearLayout>